//Test 1
//Make cube
string $cube[] = `polyCube -w 1 -h 1 -d 1 -sx 1 -sy 1 -sz 1 -ax 0 1 0 -cuv 4 -ch 1`;
rename $cube[0] "Dave";
//Make orb
string $orb[] = `polySphere -r 1 -sx 20 -sy 20 -ax 0 1 0 -cuv 2 -ch 1`;
rename $orb[0] "Alice";
//Move
select Dave;
move 2 2 2;
select -cl;
select -r Alice;
move -r 0 1 0;
//Group
group -n group1 Dave Alice;
//Rotate
rotate -r 0 90 0;

//Test 2
//Selected objects
string $sel[] = `ls -sl`;
//Random
int $randX = `rand 0 360 `;
int $randY = `rand 0 360 `;
int $randZ = `rand 0 360 `;
//Rotate
for ($each in $sel) {
    select $each;
    rotate $randX $randY $randZ;
    select -cl;
}

//Test 3
//Delete existing
if (`objExists "NewThing"`){
    delete "NewThing";
}
//Random
int $randObj = `rand 0 3 `;
//New object
if ($randObj == 0){
        print "Option 1";
        polyCube -w 1 -h 1 -d 1 -sx 1 -sy 1 -sz 1 -ax 0 1 0 -cuv 4 -ch 1;
        rename "pCube1" "NewThing";
}
if ($randObj == 1){
        print "Option 2";
        polySphere -r 1 -sx 20 -sy 20 -ax 0 1 0 -cuv 2 -ch 1;
        rename "pSphere1" "NewThing";
}
if ($randObj == 2){
        print "Option 3";
        polyCylinder -r 1 -h 2 -sx 20 -sy 1 -sz 1 -ax 0 1 0 -rcp 0 -cuv 3 -ch 1;
        rename "pCylinder1" "NewThing";
}

//Test 4
//Get all selected
string $sel[] = `ls -sl`;
int $lenList = size($sel);
//Make circle
string $circle[] = `polyDisc -sides 3 -subdivisionMode 4 -subdivisions 3 -radius 1`;
rename $circle[0] "control";
//Make new attribute
addAttr -ln "objScale"  -at double  -dv 0 |control;
setAttr -e-keyable true |control.objScale;
//Group objects
for ($each in $sel){
     group $each;
     //connectAttr control.objScale $each.scaleX;
     //connectAttr control.objScale $each.scaleY;
     //connectAttr control.objScale $each.scaleZ;
}
